<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="notificacao.nilsonjunior.example.com.ne.aulainicial.widgets.MainActivityProgressBar">

    <ProgressBar
        android:id="@+id/progressBarId"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/buttonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/progressBarHorizontalId"
        android:layout_below="@+id/progressBarHorizontalId"
        android:layout_marginTop="14dp"
        android:text="Button"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="53dp" />

    <ProgressBar
        android:id="@+id/progressBarHorizontalId"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="368dp"
        android:layout_height="21dp"
        android:layout_below="@+id/progressBarId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="113dp" />
</RelativeLayout>
